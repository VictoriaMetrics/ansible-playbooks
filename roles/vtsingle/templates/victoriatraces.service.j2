{{ ansible_managed | comment }}

[Unit]
Description=Description=VictoriaTraces service
After=network.target

[Service]
Type=simple
LimitNOFILE={{ victoriatraces_max_open_files }}
User={{ victoriatraces_system_user }}
Group={{ victoriatraces_system_group }}
ExecStart=/usr/local/bin/victoria-traces-prod {% if (victoriatraces_service_envflag_enabled | bool) %} -envflag.enable {% endif %} {% for flag, flag_value in victoriatraces_service_args.items() %}-{{ flag }}={{ flag_value }} {% endfor %}

SyslogIdentifier=victoriatraces
Restart=always

PrivateTmp=yes
ProtectHome=yes
NoNewPrivileges=yes

ProtectSystem=full

{% if victoriatraces_systemd_version | int >= 232 %}
ProtectControlGroups=true
ProtectKernelModules=true
ProtectKernelTunables=yes
{% endif %}

{% if victoriatraces_service_envflag_enabled | bool %}
{% for v in victoriatraces_service_envflag_data %}
Environment="{{ v }}"
{% endfor %}

EnvironmentFile={{ victoriatraces_service_envflag_file }}
{% endif %}

[Install]
WantedBy=multi-user.target
